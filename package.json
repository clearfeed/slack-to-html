{
  "name": "@clearfeed-ai/slack-to-html",
  "version": "1.2.2",
  "description": "Render Slack markdown as HTML",
  "main": "dist/index.js",
  "browser": "dist/bundle.js",
  "scripts": {
    "update-emoji": "node updateEmoji.js",
    "print-patterns": "npm run build && node printBuiltSlackHawkDownRegExps.js",
    "compile": "babel src --out-dir dist",
    "build": "npm run update-emoji && npm run compile && esbuild dist/index.js --bundle --global-name=slackToHtml --outfile=dist/bundle.js --platform=browser --minify && esbuild dist/index.js --minify --platform=node --outfile=dist/index.js --allow-overwrite",
    "test": "npm run update-emoji && mocha",
    "lint": "eslint src/index.js",
    "prepublish": "npm run lint && npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clearfeed/slack-to-html.git"
  },
  "keywords": [
    "slack",
    "markdown"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/clearfeed/slack-to-html/issues"
  },
  "homepage": "https://github.com/clearfeed/slack-to-html#readme",
  "dependencies": {
    "xregexp": "^3.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.0",
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/register": "^7.23.7",
    "@eslint/js": "^9.0.0",
    "chai": "^4.4.1",
    "esbuild": "^0.27.3",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "mocha": "^10.4.0"
  },
  "directories": {
    "test": "test"
  },
  "author": "Lalit Indoria"
}
